{
  "name": "design-toolkit",
  "version": "1.0.0",
  "description": "A modern frontend toolkit similar to Bootstrap",
  "main": "dist/css/toolkit.css",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "ci": "npm run lint && npm run test:run && npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "css",
    "framework",
    "frontend",
    "toolkit",
    "bootstrap",
    "ui-components"
  ],
  "author": "Design Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "puppeteer": "^24.22.3",
    "rimraf": "^5.0.0",
    "sass": "^1.69.5",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^13.0.0",
    "terser": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/design-toolkit.git"
  }
}
