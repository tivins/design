{
  "name": "design-toolkit",
  "version": "1.0.0",
  "description": "A modern frontend toolkit similar to Bootstrap",
  "main": "dist/css/toolkit.css",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:pages": "vite build --config vite.config.pages.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "cypress run",
    "test:visual:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e && npm run test:visual",
    "test:report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "lint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "ci": "npm run lint && npm run test:all && npm run build",
    "clean": "rimraf dist test-results allure-results allure-report",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "css",
    "framework",
    "frontend",
    "toolkit",
    "bootstrap",
    "ui-components"
  ],
  "author": "Design Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.10.0",
    "cypress": "^13.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-playwright-preset": "^1.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.69.5",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^13.0.0",
    "terser": "^5.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tivins/design.git"
  }
}
